<script>
let cart = [];

function addToCart(product, price) {
  cart.push({product, price});
  alert(product + " added to cart");
}

function checkout() {
  if(cart.length === 0){
    alert("Your cart is empty");
    return;
  }

  let message = "Hello Wadees Hardware, I would like to order:%0A";
  let total = 0;

  cart.forEach(item => {
    message += "- " + item.product + " R" + item.price + "%0A";
    total += item.price;
  });

  message += "Total: R" + total;

  window.open("https://wa.me/27679741500?text=" + message);
}
</script>

